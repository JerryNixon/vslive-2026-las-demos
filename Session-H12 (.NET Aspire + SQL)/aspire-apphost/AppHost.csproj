<Project Sdk="Microsoft.NET.Sdk">

  <Sdk Name="Aspire.AppHost.Sdk" Version="13.1.2" />

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsAspireHost>true</IsAspireHost>
    <UserSecretsId>2936957a-c589-409e-9bd8-7799efb76c03</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Aspire.Hosting.SqlServer" Version="13.1.1" />
    <PackageReference Include="CommunityToolkit.Aspire.Hosting.Ollama" Version="13.1.1" />
    <PackageReference Include="CommunityToolkit.Aspire.Hosting.SqlDatabaseProjects" Version="13.1.1" />
    <PackageReference Include="CommunityToolkit.Aspire.Hosting.McpInspector" Version="13.1.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="CommunityToolkit.Aspire.Hosting.Azure.DataApiBuilder">
      <HintPath>..\..\packages\CommunityToolkit.Aspire.Hosting.Azure.DataApiBuilder.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\database\CatalogDb\CatalogDb.sqlproj" IsAspireProjectResource="true" />
    <ProjectReference Include="..\database\InventoryDb\InventoryDb.sqlproj" IsAspireProjectResource="true" />
    <ProjectReference Include="..\web-chat\WebChat.csproj" />
  </ItemGroup>

</Project>
