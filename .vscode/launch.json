{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Aspire AppHost",
      "type": "dotnet",
      "request": "launch",
      "preLaunchTask": "AppHost: Build (safe)",
      "projectPath": "${workspaceFolder}/Session-H12 (.NET Aspire + SQL)/aspire-apphost/AppHost.csproj",
      "env": {
        "ASPNETCORE_URLS": "http://localhost:15888",
        "ASPIRE_DASHBOARD_OTLP_HTTP_ENDPOINT_URL": "http://localhost:21180",
        "ASPIRE_RESOURCE_SERVICE_ENDPOINT_URL": "http://localhost:17037",
        "ASPIRE_ALLOW_UNSECURED_TRANSPORT": "true",
        "DOTNET_ENVIRONMENT": "Development",
        "DOTNET_DASHBOARD_UNSECURED_ALLOW_ANONYMOUS": "true"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://localhost:\\d+)",
        "uriFormat": "https://localhost:15888"
      }
    }
  ]
}
